      <div style="width:75%;height:50%; margin:auto; overflow:scroll" id="my-cal-inline"></div>
      <script type="text/javascript">
          (function (C, A, L) {
              let p = function (a, ar) {
                  a.q.push(ar);
              };
              let d = C.document;
              C.Cal = C.Cal || function () {
